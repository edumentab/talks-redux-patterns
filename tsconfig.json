{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./lib/",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "lib": ["es2018", "dom", "esnext.array"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
